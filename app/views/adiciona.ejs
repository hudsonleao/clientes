<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="">
    <!--<link rel="icon" href="../../favicon.ico">-->

    <title>Adicionar</title>

    <!-- Bootstrap -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilo site -->
    <link href="/assets/css/login.css" rel="stylesheet">

    <!-- Jquery padrão bootstrap -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="assets/js/jquery.min.js"><\/script>')</script>
</head>

<body>
    <!-- Importa o navbar -->
    <%- include('navbar') -%>

    <section>
        <div class="container">
            <h1 class="text-center">Adicionar usuário</h1>
            <div class="jumbotron">
                <% //Se o nível do usuário for diferente de Normal
                if ((parametros.nivel) !== 1){%>
                <!-- Inicio do formulário -->
                <form action="/cliente/adicionar/salvar" method="POST">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="nome">*Nome:</label>
                                <input type="text" id="nome" name="nome" class="form-control"
                                    placeholder="Digite o nome" aria-describedby="basic-addon1" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="usuario">*Usuário:</label>
                                <input type="text" id="usuario" name="usuario" class="form-control"
                                    placeholder="Digite o usuário" aria-describedby="basic-addon1" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="senha">*Senha:</label>
                                <input type="password" id="senha" name="senha" class="form-control"
                                    placeholder="Digite a senha" aria-describedby="basic-addon1" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="cpf">*CPF:</label>
                                <input type="text" id="cpf" name="cpf" class="form-control" placeholder="Digite o cpf"
                                    aria-describedby="basic-addon1" required maxlength="14">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="rg">*RG:</label>
                                <input type="text" id="rg" name="rg" class="form-control" placeholder="Digite o rg"
                                    aria-describedby="basic-addon1" required required maxlength="13">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="data_nasc">*Nascimento:</label>
                                <input type="date" id="data_nasc" name="data_nasc" class="form-control"
                                    placeholder="Digite a data de nascimento" aria-describedby="basic-addon1" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">*E-mail:</label>
                                <input type="email" id="email" name="email" class="form-control"
                                    placeholder="Digite o e-mail" aria-describedby="basic-addon1" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="tel1">*Telefone 1:</label>
                                <input type="text" id="tel1" name="tel1" class="form-control tel1"
                                    placeholder="Digite seu telefone" aria-describedby="basic-addon1" required
                                    maxlength="15">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="tel2">Telefone 2:</label>
                                <input type="text" id="tel2" name="tel2" class="form-control tel2"
                                    placeholder="Digite seu telefone" aria-describedby="basic-addon1" maxlength="15">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="tel3">Telefone 3:</label>
                                <input type="text" id="tel3" name="tel3" class="form-control tel3"
                                    placeholder="Digite seu telefone" aria-describedby="basic-addon1" maxlength="15">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="tel4">Telefone fixo:</label>
                                <input type="text" id="tel4" name="tel4" class="form-control tel4"
                                    placeholder="Digite seu telefone" aria-describedby="basic-addon1" maxlength="15">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="nivel">*Nivel:</label>
                                <select class="form-control" name="nivel" id="nivel">
                                    <% //Se o nível do usuário for igual a Super Admin
                                    if (parametros.nivel == 3){%>
                                    <option value="1">Normal</option>
                                    <option value="2">Admin</option>
                                    <option value="3">Super Admin</option>
                                    <% } %>
                                    <% //Se o nível do usuário for igual a Admin
                                    if (parametros.nivel == 2){%>
                                    <option value="1">Normal</option>
                                    <option value="2">Admin</option>
                                    <% } %>
                                </select>
                            </div>
                            <label>* Campos com preenchimento obrigatório. </label>
                        </div>
                    </div><!-- Fim row -->

                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-saved"></span>
                        Salvar</button>
                </form>
                <!-- Fim do formulário -->
                <% } 
            else {%>
                <h1 class="text-center">Você não tem autorização para acessar esta página.</h1>
                <%}%>
          </div><!--Fim do jumbotron -->
    </div><!-- Fim do container -->
</section> <!-- Fim da tag session -->!
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
    <script>
        // Formata o campo CPF
        $(document).ready(function () {
            var $campoCpf = $("#cpf");
            $campoCpf.mask('000.000.000-00', { reverse: true });
        });
        // Formata os campos de telefone
        jQuery("input.tel1, input.tel2, input.tel3")
            .mask("(99) 99999-9999")
            .focusout(function (event) {
                var target, phone, element;
                target = (event.currentTarget) ? event.currentTarget : event.srcElement;
                phone = target.value.replace(/\D/g, '');
                element = $(target);
                element.unmask();
            });
        //Formata o campo de telefone fixo
        jQuery("input.tel4")
            .mask("(99) 9999-9999")
            .focusout(function (event) {
                var target, phone, element;
                target = (event.currentTarget) ? event.currentTarget : event.srcElement;
                phone = target.value.replace(/\D/g, '');
                element = $(target);
                element.unmask();
            });

    </script>
  </body>
</html>